<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="menuPane" styleClass="menuBar" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.weve.testgenerator.frontend.controller.MenuBarController">
   <children>
      <HBox spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#openHomePage" text="Home" />
            <Button mnemonicParsing="false" onAction="#openPage2" text="Page 2" />
         </children>
      </HBox>
      <Region HBox.hgrow="ALWAYS" />
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#onMinimizeButtonClicked" text="Min" />
            <Button mnemonicParsing="false" onAction="#onMaximizeButtonClicked" text="Max" />
            <Button mnemonicParsing="false" onAction="#onCloseButtonClicked" styleClass="closeButton" stylesheets="@../css/app.css" text="Close" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
