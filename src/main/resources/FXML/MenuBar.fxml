<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="menuPane" styleClass="menuBar" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.weve.testgenerator.frontend.controller.MenuBarController">
   <children>
      <HBox alignment="BOTTOM_LEFT" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#openFiles">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icon/window/openFiles.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button mnemonicParsing="false" onAction="#createTestFiles">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icon/window/export.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
         <HBox.margin>
            <Insets bottom="2.0" left="5.0" top="2.0" />
         </HBox.margin>
      </HBox>
      <Region HBox.hgrow="ALWAYS" />
      <HBox alignment="CENTER_LEFT">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onMinimizeButtonClicked">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icon/window/minimize_dark.png" />
                     </image>
                  </ImageView>
               </graphic>
               <styleClass>
                  <String fx:value="windowButton" />
               </styleClass>
            </Button>

            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onMaximizeButtonClicked">
               <graphic>
                  <ImageView fx:id="btnMaximize" pickOnBounds="true" preserveRatio="true" />
               </graphic>
               <styleClass>
                  <String fx:value="windowButton" />
               </styleClass>
            </Button>

            <Button alignment="CENTER" mnemonicParsing="false" onAction="#onCloseButtonClicked" stylesheets="@../css/app.css">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icon/window/closeActive_dark.png" />
                     </image>
                  </ImageView>
               </graphic>
               <styleClass>
                  <String fx:value="closeButton" />
                  <String fx:value="windowButton" />
               </styleClass>
            </Button>
         </children>
      </HBox>
   </children>
</HBox>
