<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="menuPane" styleClass="menuBar" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.weve.testgenerator.frontend.controller.MenuBarController">
   <children>
      <HBox spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#openHomePage" text="Home" />
            <Button mnemonicParsing="false" onAction="#openPage2" text="Page 2" />
         </children>
         <HBox.margin>
            <Insets bottom="2.0" left="5.0" top="2.0" />
         </HBox.margin>
      </HBox>
      <Region HBox.hgrow="ALWAYS" />
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#onMinimizeButtonClicked" style="-fx-border-radius: 0;">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icon/window/minimize_dark.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button mnemonicParsing="false" onAction="#onMaximizeButtonClicked">
               <graphic>
                  <ImageView fx:id="btnMaximize" pickOnBounds="true" preserveRatio="true" />
               </graphic></Button>
            <Button mnemonicParsing="false" onAction="#onCloseButtonClicked" styleClass="closeButton" stylesheets="@../css/app.css">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icon/window/closeActive_dark.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
      </HBox>
   </children>
</HBox>
